# ============================================
# Unmotivated Hero - Backend Configuration
# ============================================
# Copy this file to .env and fill in your values
# See OAUTH_SETUP_GUIDE.md for detailed setup instructions

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://unmotivated_hero:dev_password_only@localhost:5432/unmotivated_hero?schema=public"

# ============================================
# REDIS (Job Queue)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# JWT Authentication
# ============================================
# IMPORTANT: Change in production!
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# ============================================
# ENCRYPTION (for OAuth tokens)
# ============================================
# CRITICAL: Must be exactly 32 characters for AES-256
# Generate: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================
# OAUTH - YouTube / Google
# ============================================
# Setup guide: https://console.cloud.google.com/
# Required scopes: email, profile, youtube.upload, youtube.readonly, drive.readonly
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/auth/google/callback

# ============================================
# OAUTH - Facebook / Instagram
# ============================================
# Setup guide: https://developers.facebook.com/
# Required permissions: email, public_profile, pages_manage_posts, instagram_basic, instagram_content_publish
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:3001/api/v1/auth/facebook/callback

# ============================================
# OAUTH - TikTok
# ============================================
# Setup guide: https://developers.tiktok.com/
# Required scopes: user.info.basic, video.list, video.upload, video.publish
# NOTE: Requires app review before going live
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=http://localhost:3001/api/v1/auth/tiktok/callback

# ============================================
# API Configuration
# ============================================
PORT=3001
NODE_ENV=development
API_PREFIX=api/v1

# ============================================
# CORS - Frontend URL
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=500000000  # 500MB

# ============================================
# Job Queue
# ============================================
QUEUE_CONCURRENCY=5

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# [ ] Generate new ENCRYPTION_KEY (32 chars)
# [ ] Generate new JWT_SECRET (64 chars)
# [ ] Update all OAuth redirect URIs to production domain
# [ ] Update FRONTEND_URL to production domain
# [ ] Set NODE_ENV=production
# [ ] Use production database (not localhost)
# [ ] Use production Redis (not localhost)
# [ ] Submit OAuth apps for platform review